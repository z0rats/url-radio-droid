root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.{xml,json}]
indent_size = 4
indent_style = space

[*.gradle]
indent_size = 4
indent_style = space
