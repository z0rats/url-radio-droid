<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_spacing"
    app:dragEdge="right"
    app:mode="same_level"
    app:minDistRequestDisallowParent="0dp">

    <!-- Secondary view: Swipe buttons (revealed when swiped from right) -->
    <LinearLayout
        android:id="@+id/layoutSwipeButtons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:background="@android:color/transparent"
        android:minHeight="80dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textAppearance="@style/TextAppearance.Label.Medium"
            android:textColor="@color/md_theme_light_onPrimary"
            android:backgroundTint="@color/md_theme_light_primary"
            android:minWidth="0dp"
            android:minHeight="48dp"
            android:paddingStart="@dimen/spacing_3"
            android:paddingEnd="@dimen/spacing_3"
            android:letterSpacing="0"
            android:contentDescription="@string/edit_station"
            app:cornerRadius="@dimen/button_corner_radius"
            app:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_2"
            android:text="@string/delete"
            android:textAppearance="@style/TextAppearance.Label.Medium"
            android:textColor="@color/md_theme_light_onError"
            android:backgroundTint="@color/md_theme_light_error"
            android:minWidth="0dp"
            android:minHeight="48dp"
            android:paddingStart="@dimen/spacing_3"
            android:paddingEnd="@dimen/spacing_3"
            android:letterSpacing="0"
            android:contentDescription="@string/delete_station"
            app:cornerRadius="@dimen/button_corner_radius"
            app:elevation="0dp" />

    </LinearLayout>

    <!-- Main view: Station card (swiped to reveal buttons) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/app_name"
        app:cardBackgroundColor="@color/glass_primary"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:strokeColor="@color/glass_secondary"
        app:strokeWidth="1dp"
        app:rippleColor="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_5"
            android:paddingTop="@dimen/spacing_4"
            android:paddingEnd="@dimen/spacing_5"
            android:paddingBottom="@dimen/spacing_4"
            android:minHeight="80dp">

            <TextView
                android:id="@+id/textViewStationEmoji"
                android:layout_width="@dimen/icon_size_extra_large"
                android:layout_height="@dimen/icon_size_extra_large"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/spacing_3"
                android:contentDescription="@string/station_name"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@id/layoutStationText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutStationText" />

            <LinearLayout
                android:id="@+id/layoutStationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toStartOf="@id/imageViewPlayIcon"
                app:layout_constraintStart_toEndOf="@id/textViewStationEmoji"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textViewStationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Title.Medium"
                    android:textColor="@color/text_primary"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:letterSpacing="0" />

                <TextView
                    android:id="@+id/textViewStationUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Body.Small"
                    android:textColor="@color/text_hint"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewPlayIcon"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginStart="@dimen/spacing_4"
                android:src="@drawable/ic_play_circle"
                android:tint="@color/glass_accent"
                android:contentDescription="@string/play"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="@id/layoutStationText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutStationText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
